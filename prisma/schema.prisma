// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js" // Зверни увагу: тут має бути "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Модель Користувача
model User {
  id            String    @id @default(cuid())
  phone         String?   @unique // Логін по номеру телефону (робимо опційним для Auth.js сумісності, хоча він потрібен)
  password      String?   // Хешований пароль (опційний якщо буде логін через Google/Github колись)
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  address       String?   // Збережена адреса
  createdAt     DateTime  @default(now())

  accounts      Account[]
  sessions      Session[]
  orders        Order[]   // Зв'язок: один користувач має багато замовлень

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Модель Замовлення (Історія)
model Order {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])

  totalAmount Float
  address     String      // Адреса доставки для конкретного замовлення
  status      String      @default("PENDING") // PENDING, COMPLETED, CANCELLED
  createdAt   DateTime    @default(now())

  items       OrderItem[] // Товари в цьому замовленні
}

// Товари всередині замовлення (щоб знати, яку піцу замовили)
model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])

  productId String  // ID з нашого файлу data.ts (наприклад "p1")
  name      String  // Назва товару (щоб зберегти її на момент покупки)
  price     Float
  quantity  Int

  // Додаткові параметри
  size      Int?
  crust     String?
  edge      String?
}
